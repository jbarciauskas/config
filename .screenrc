shell             /bin/bash
term              xterm-256color
#term              xterm
# terminfo and termcap for nice 256 color terminal
# # allow bold colors - necessary for some reason
attrcolor b ".I"
# # tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

defbce "on"
#
startup_message   off
vbell off

defscrollback 5000

hardstatus on
hardstatus alwayslastline

# greyscale window list with datetime at right
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r} (%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %D, %M %d %Y %{W}%c %{g}]'
screen -t build1 5
stuff "ssh build1\012"
stuff "clear\012"

screen -t stg2 4
stuff "ssh stg2\012"
stuff "clear\012"

screen -t consl 3
stuff "clear\012"

screen -t tests 2
stuff "cd ~/sites/framework/test\012"
stuff "clear\012"

screen -t framework2 1
stuff "cd ~/sites2/framework\012"
stuff "clear\012"

screen -t framework1 0
stuff "cd ~/sites/framework\012"
stuff "clear\012"

defscrollback 5000

bindkey -k F1 quit
bindkey -k F1 quit
bindkey -k k1 select 0
bindkey -k k2 select 1
bindkey -k k3 select 2
bindkey -k k4 select 3
bindkey -k k5 select 4
bindkey -k k6 select 5
